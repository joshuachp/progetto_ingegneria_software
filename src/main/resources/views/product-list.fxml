<AnchorPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.client.controllers.ProductListController">
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="Account">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#handlerLogutAction" text="Logout" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <GridPane alignment="CENTER_RIGHT">
              <columnConstraints>
                  <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" />
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <ChoiceBox fx:id="CbxColumn" prefWidth="150.0" GridPane.columnIndex="1">
                     <GridPane.margin>
                        <Insets />
                     </GridPane.margin>
                  </ChoiceBox>
                  <TextField fx:id="Search" promptText="Ricerca" GridPane.columnIndex="2">
                     <GridPane.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </GridPane.margin>
                     <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                     </padding>
                  </TextField>
                  <Button mnemonicParsing="false" onAction="#handleBackAction" style="-fx-background-color: null;">
                     <graphic>
                        <ImageView fitHeight="150.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/back-arrow.png" />
                           </image>
                           <cursor>
                              <Cursor fx:constant="HAND" />
                           </cursor>
                        </ImageView>
                     </graphic>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </Button>
               </children>
            </GridPane>
            <TableView fx:id="tableview" VBox.vgrow="ALWAYS">
              <columns>
                  <TableColumn fx:id="IDCol" editable="false" minWidth="100.0" prefWidth="200.0" text="ID Prodotto" />
                <TableColumn fx:id="NameCol" editable="false" minWidth="100.0" prefWidth="200.0" text="Nome Prodotto" />
                  <TableColumn fx:id="BrandCol" editable="false" minWidth="100.0" prefWidth="200.0" text="Brand" />
                  <TableColumn fx:id="PriceCol" editable="false" minWidth="100.0" prefWidth="200.0" text="Prezzo" />
                <TableColumn fx:id="QuantityCol" editable="true" minWidth="100.0" prefWidth="200.0" text="QuantitÃ " />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="buttonimportproductlist1" alignment="CENTER" layoutX="331.0" layoutY="32.0" mnemonicParsing="false" onAction="#handleRemoveProducts" style="-fx-background-color: #DDDDDD;" text="Rimuovi prodotto selezionato">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="buttonimportproductlist" alignment="CENTER" mnemonicParsing="false" onAction="#handlerAddProductList" style="-fx-background-color: #3e84ff;" text="Aggiungi lista prodotti" textFill="WHITE" underline="true">
                     <HBox.margin>
                        <Insets bottom="15.0" left="15.0" top="15.0" />
                     </HBox.margin>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="buttonaddproduct" alignment="CENTER" mnemonicParsing="false" onAction="#handlerAddProduct" style="-fx-background-color: &quot;0066FF&quot;;" text="Aggiungi prodotto" textFill="WHITE">
                     <HBox.margin>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </HBox.margin>
                  </Button>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
